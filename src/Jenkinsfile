pipeline {
    agent { label 'spc' }
    parameters {
        choice(name: 'MAVEN_GOAL', choices: ['package', 'clean package'], description: 'This is the Maven goal')
    }
    stages {
        stage('git') {
            steps {
                git url: 'https://github.com/sangameshwar-0109/dummy-reposotory-april-24.git',
                    branch: 'main'
            }
        }
        stage('build') {
            steps {
                mail bcc: '', body: 'Build started', cc: '', from: '', replyTo: '',
                    subject: 'Build started', to: 'sangu18898@gmail.com'
                sh "mvn ${params.MAVEN_GOAL}"
                junit testResults: '**/surefire-reports/*.xml'
                archiveArtifacts artifacts: '**/target/spring-petclinic-*.jar'
                mail bcc: '', body: 'Build completed', cc: '', from: '', replyTo: '',
                    subject: 'Build completed', to: 'sangu18898@gmail.com'
            }
            post {
                failure {
                    mail bcc: 'sangu18898@gmail.com',
                        from: 'jenkins@learningthoughts.io',
                        to: "sangu18898@gmail.com",
                        subject: "Build of ${JOB_BASE_NAME} with Build Id ${BUILD_ID} has failed",
                        body: "Refer to ${RUN_DISPLAY_URL} for more info"
                }
                success {
                    mail bcc: 'sangu18898@gmail.com',
                        from: 'jenkins@learningthoughts.io',
                        to: "sangu18898@gmail.com",
                        subject: "Build of ${JOB_BASE_NAME} with Build Id ${BUILD_ID} was successful",
                        body: "Refer to ${RUN_DISPLAY_URL} for more info"
                }
            }
        }
    }
}
